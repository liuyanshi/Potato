<form method="post" action="/question/<%= question._id%>/createReply" class="form-horizontal post-comment" id="postCommentArea">

    <% if(user) { %>
    <div class="form-group">
        <label><a href="/user/u/<%=user._id %>"><%= user.nickname%> </a> &nbsp;&nbsp;&nbsp;&nbsp;<%= user.signature%></label>
        <textarea name="content" rows="20" cols="100" id="input_create_question_content"></textarea>
    </div>
    <input type="submit" class="btn btn-default" value="发表评论" style="float: right;">
    <% } else { %>
    <input type="button" class="btn btn-default" value="登录/注册后可发表评论" style="float: right;">
    <% } %>
</form>