<div id="publishedAnswersArea">
    <% if (question.answers && question.answers.length > 0 ){ %>
    <% question.answers.forEach(function (answer, index) { %>
    <div class="question-answer-item" id="<%= answer._id %>">
        <div class="panel panel-default">

            <div class="panel-heading">
                <p class="panel-title">

                    <strong><a href="/user/u/<%= answer.author_id %>">
                            <%= answer.author.nickname %>
                        </a>,</strong>

                <span><small> &nbsp;&nbsp;&nbsp;<%= answer.author.signature %>
                    </small></span>
                <span style=" float: right"><img class="text-right" src="<%= answer.author.avatarUrl %>"
                                                 style="width: 20px;height: 20px;">
</span>
                </p>

            </div>
            <div class="panel-body">
                <%- answer.content %>
            </div>
            <div class="panel-body">
                <small>回复于 <%= answer.create_at_ago() %> &nbsp;&nbsp;&nbsp;
                    <span class="like-total" total="<%= answer.likes.length %>">
                        <%= answer.likes.length %>
                        人赞
                    </span>
                    <a href="javascript:;" class="right-small-button"><span title="赞"
                                                                            class="glyphicon glyphicon-thumbs-up"></span></a>
                </small>
                <a href="javascript:;" class="right-small-button"><span title="评论"
                                                                        class="glyphicon glyphicon-comment"></span></a>
            </div>

            <%- include ../answer-comment/createComment %>
        </div>
    </div>

    <% }) %>
    <% } %>
</div>