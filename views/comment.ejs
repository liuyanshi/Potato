<div class="comments">
    <div class="alert alert-success" role="alert">评论区
        <a href="#postCommentArea" class="alert-link" style="float:right">发表新评论</a>
    </div>
    <br/>
    <% article.comments.forEach(function (comment, index) { %>

    <div class="panel panel-default">
        <div class="panel-heading">
            <h3 class="panel-title">
                <img src="<%= comment.avatar %>" class="left_avatar">
                <a href="<%= comment.website %>" class="label label-primary">
                    <%= comment.author %>
                </a>
                <span class="label label-default">回复于 <%= comment.postTime %></span></h3>
        </div>
        <div class="panel-body">
            <%- comment.content %>
        </div>
    </div>

        <% }) %>

                <form method="post" action="/comment/<%= article._id %>" class="form-horizontal post-comment" id="postCommentArea">
                    <div class="post-comment-user-info">
                    <% if(user) { %>
                    <div class="form-group ">
                        <label for="exampleInputEmail1">邮箱</label>
                        <input type="email" name="email" name="email" value="<%= user.email %>" class="form-control" id="exampleInputEmail1" placeholder="邮箱">
                    </div>
                    <div class="form-group">
                        <label for="exampleInputName1">作者</label>
                        <input type="text" name="author" value="<%= user.name %>" class="form-control" id="exampleInputName1" placeholder="作者">
                    </div>
                    <div class="form-group">
                        <label for="exampleInputPassword1">个人网址</label>
                        <input type="text"name="website" value="/users/u/<%= user.name %>" class="form-control" id="exampleWebsite1" placeholder="个人网址">
                    </div>

                    <% } else { %>
                    <div class="form-group">
                        <label for="exampleInputEmail1">邮箱</label>
                        <input type="email" name="email" name="email" class="form-control" id="exampleInputEmail1" placeholder="邮箱">
                    </div>
                    <div class="form-group">
                        <label for="exampleInputName1">作者</label>
                        <input type="text" name="author" class="form-control" id="exampleInputName1" placeholder="作者">
                    </div>
                    <div class="form-group">
                        <label for="exampleInputPassword1">个人网址</label>
                        <input type="text" name="website"  value="http://" class="form-control" id="exampleWebsite1" placeholder="个人网址">
                    </div>
                    <% } %>
                    </div>
                    <textarea class="form-control" rows="3"></textarea>
                    <input type="submit" class="btn btn-default" value="发表评论" style="float: right;">
                    <br/>
            </form>

</div>